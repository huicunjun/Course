<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--toolbar title字体-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <!--        <item name="android:textColor">@color/colorAccent</item>-->
    </style>
    <style name="Toolbar.Sub.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
        <!--        <item name="android:textColor">@color/colorAccent</item>-->
    </style>

    <style name="ToolbarTheme_while" parent="Theme.AppCompat.Light.NoActionBar">
        <!--溢出菜单默认图标（右边的那个三个点）-->
        <!-- <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>-->
        <!--阴影去除-->
        <item name="android:elevation">0dp</item>
        <!--文字-->
        <item name="android:textColor">#000000</item>
        <!--光标颜色-->
        <item name="colorAccent">@color/colorFFFFFF</item>
        <!--toolbar图标颜色-->
        <item name="android:textColorSecondary">@color/colorFFFFFF</item>
    </style>
</resources>
