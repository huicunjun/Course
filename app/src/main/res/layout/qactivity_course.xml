<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/dl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment1">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                android:theme="@style/ToolbarTheme_while"
                app:navigationIcon="@mipmap/pf_menu_light"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:subtitleTextAppearance="@style/Toolbar.Sub.TitleText"
                app:titleTextColor="@color/colorFFFFFF"
                android:background="@color/colorAccent"
                app:title="课程表"
                app:subtitleTextColor="@color/colorFFFFFF"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <View
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期一"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期二"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期三"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期四"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期五"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
           <android.support.v4.widget.NestedScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="40dp"
                       android:layout_height="match_parent">

                       <LinearLayout
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="120dp">

                           <TextView
                               android:gravity="bottom|center"
                               android:layout_weight="1"
                               android:text="1"
                               android:ems="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="8:30"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />

                           <TextView
                               android:gravity="bottom|center"
                               android:layout_weight="1"
                               android:text="2"
                               android:ems="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="9:25"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                       </LinearLayout>

                       <LinearLayout
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="120dp">

                           <TextView
                               android:gravity="bottom|center"
                               android:layout_weight="1"
                               android:text="3"
                               android:ems="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="10:20"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />

                           <TextView
                               android:gravity="bottom|center"
                               android:layout_weight="1"
                               android:text="4"
                               android:ems="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="11:15"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                       <LinearLayout
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="120dp">

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:ems="1"
                               android:gravity="bottom|center"
                               android:text="5" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="14:00"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:ems="1"
                               android:gravity="bottom|center"
                               android:text="6" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="14:55"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                       <LinearLayout
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="120dp">

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:ems="1"
                               android:gravity="bottom|center"
                               android:text="7" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="15:50"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />

                           <TextView
                               android:gravity="bottom|center"
                               android:layout_weight="1"
                               android:text="8"
                               android:ems="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="16:45"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                       <LinearLayout
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="120dp">

                           <TextView
                               android:gravity="bottom|center"
                               android:layout_weight="1"
                               android:text="9"
                               android:ems="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="18:30"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />

                           <TextView
                               android:gravity="bottom|center"
                               android:layout_weight="1"
                               android:text="10"
                               android:ems="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="19:25"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                       <LinearLayout
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="120dp">

                           <TextView
                               android:gravity="bottom|center"
                               android:layout_weight="1"
                               android:text="11"
                               android:ems="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="20:20"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />

                           <TextView
                               android:gravity="bottom|center"
                               android:layout_weight="1"
                               android:text="12"
                               android:ems="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:layout_weight="1"
                               android:textSize="11sp"
                               android:text="21:15"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                       </LinearLayout>

                   </LinearLayout>
                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/recy"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>
               </LinearLayout>
           </android.support.v4.widget.NestedScrollView>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_gravity="end|bottom"
        android:id="@+id/fab"
        app:elevation="5dp"
            android:background="@color/color5c6bc0"
        android:src="@drawable/color"
        android:clickable="true"
        app:borderWidth="0dp"
        app:rippleColor="#0097a7"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        app:pressedTranslationZ="12dp"
        android:layout_height="wrap_content"
        android:focusable="true" />
    </FrameLayout>




    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:gravity="center"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_course_head"
        app:menu="@menu/nav_course"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>